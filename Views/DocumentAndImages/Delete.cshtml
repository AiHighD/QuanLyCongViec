@model CourseManagement.ViewModels.DocAndImageViewModel

@{
    ViewData["Title"] = "Delete";
}

<h1 class="text-center text-danger my-5">Delete</h1>
<h5 class="text-center text-muted mb-4">
    Are you sure you want to delete this?
</h5>
<hr />

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow-lg">
            <div class="card-body ">
                <div class="text-center mb-4">
                    @if (!string.IsNullOrEmpty(Model.Images))
                    {
                        <img src="@Model.Images" class="img-fluid" style="max-width: 50%; border-radius: 10px;"
                            alt="Image for @Model.Name">
                    }
                </div>

                <dl class="row">
                    <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.Name)</dt>
                    <dd class="form-control">@Html.DisplayFor(model => model.Name)</dd>

                    <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.Documents)</dt>
                    <dd class="form-control">@Html.DisplayFor(model => model.Documents)</dd>
                </dl>


                <div class="d-flex justify-content-between mt-3">
                    <form asp-action="Delete"
                        onsubmit="return confirm('Are you sure you want to delete this document?');"
                        style="display: inline-block;">
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn btn-danger btn-lg me-2">
                            <i class="fas fa-trash-alt"></i> Delete
                        </button>
                    </form>
                    <a asp-action="Index" class="btn btn-success btn-lg">
                        <i class="fas fa-arrow-left"></i> Back to List
                    </a>
                </div>
            </div>

        </div>
    </div>
</div>
