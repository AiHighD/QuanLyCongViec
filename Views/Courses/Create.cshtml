@model CourseManagement.ViewModels.CourseRequest

@{
    ViewData["Title"] = "Create";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <!-- Thẻ Card để bao bọc form -->
            <div class="card shadow">
                <div class="card-header text text-center">
                    <h3>Create Task</h3>
                </div>
                <div class="card-body">
                    <!-- Form chính -->
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <!-- Input Name -->
                        <div class="form-group mb-3">
                            <label asp-for="Name" class="form-label"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <!-- Input Topic -->
                        <div class="form-group mb-3">
                            <label asp-for="Topic" class="form-label"></label>
                            <input asp-for="Topic" class="form-control" />
                            <span asp-validation-for="Topic" class="text-danger"></span>
                        </div>

                        <!-- Input StartTime -->
                        <div class="form-group mb-3">
                            <label asp-for="StartTime" class="form-label"></label>
                            <input asp-for="StartTime" type="date" class="form-control" />
                            <span asp-validation-for="StartTime" class="text-danger"></span>
                        </div>

                        <!-- Input EndTime -->
                        <div class="form-group mb-3">
                            <label asp-for="EndTime" class="form-label"></label>
                            <input asp-for="EndTime" type="date" class="form-control" />
                            <span asp-validation-for="EndTime" class="text-danger"></span>
                        </div>

                        <!-- Input Status -->
                        <div class="form-group mb-3">
                            <label asp-for="Status" class="form-label"></label>
                            <select asp-for="Status" class="form-select">
                                <option value="">Choose Status</option>
                                <option value="Pending">Pending</option>
                                <option value="Completed">Completed</option>
                            </select>
                            <span asp-validation-for="Status" class="text-danger"></span>
                        </div>

                        <!-- Nút Create và điều hướng -->
                        <div class="d-flex justify-content-between">
                            <input type="submit" value="Create" class="btn btn-primary" />
                            <a asp-action="Index" class="btn btn-danger">Back to List</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
