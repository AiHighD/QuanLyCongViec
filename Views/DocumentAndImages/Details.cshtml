@model CourseManagement.ViewModels.DocAndImageViewModel

@{
    ViewData["Title"] = "Details";
}

<div class="d-flex justify-content-center align-items-center vh-100 bg-light">
    <div class="card shadow-lg" style="max-width: 800px; width: 100%; border-radius: 15px;">
        <!-- Header -->
        <div class="card-header bg text text-center"
            style="border-top-left-radius: 15px; border-top-right-radius: 15px;">
            <h3 class="mb-0">Details</h3>
        </div>

        <!-- Content -->
        <div class="card-body p-4">
            <!-- Image Section -->
            <div class="text-center mb-4">
                @if (!string.IsNullOrEmpty(Model.Images))
                {
                    <img src="@Model.Images" class="img-fluid rounded-3"
                        style="max-width: 70%; height: auto; border: 2px solid #ddd;" alt="Image for @Model.Name">
                }
                else
                {
                    <p class="text-danger">No image available</p>
                }
            </div>

            <!-- Details Table -->
            <table class="table table-borderless table-striped">
                <tbody>
                    <div class="form-group mb-3">
                        <label class="form-label fw-bold">@Html.DisplayNameFor(model => model.Name)</label>
                        <div class="form-control bg-white">
                            @Html.DisplayFor(model => model.Name)
                        </div>
                    </div>
                    <div class="form-group mb-3">
                        <label class="form-label fw-bold">@Html.DisplayNameFor(model => model.Documents)</label>
                        <div class="form-control bg-white">
                            @Html.DisplayFor(model => model.Documents)
                        </div>
                    </div>
                </tbody>
                <div class="d-flex justify-content-between">
                    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary btn-lg me-2">
                        <i class="fas fa-edit"></i> Edit
                    </a>
                    <a asp-action="Index" class="btn btn-danger btn-lg">
                        <i class="fas fa-arrow-left"></i> Back to List
                    </a>
                </div>
            </div>
            </table>
        </div>
    </div>
</div>
